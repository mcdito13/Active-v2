include navbar
.container(id='usersProfileContainer')
    .container
        h3 Welcome back. We hope you've been staying active and meeting your goals.

    .col-md-6.m-b-md
        .list-group
            h4.list-group-header
                | Recent Activity

            - var prettyDate = function(dateObject) {
            -   var m = dateObject.getMonth() + 1; // bc js is weird
            -   var d = dateObject.getDate();
            -   var y = dateObject.getFullYear();
            -   return m + '/' + d + '/' + y;xs
            - }

            for val in user_activity_result
                a.list-group-item(id='user_table_data')= val.name
                    - var goodD = prettyDate(val.date_done);
                    - var activityLogToDelete = val.id;
                    #editDeleteContainer.pull-right
                        #goodD #{goodD}
                            button.btn.btn-primary-outline(class='editDeleteButtons', data-toggle='modal', data-target='#addActivityModal')
                                span.icon.icon-pencil
                            form(action='/activityLog/delete' method='get', id='deleteForm')
                                for val in user_info_result
                                    - var data = val.id;
                                    input(type='hidden', name='userId', value=data)
                                input(type='hidden', name='activityLogToDelete', value=activityLogToDelete)
                                button.btn.btn-primary-outline(class='editDeleteButtons' type='submit')
                                    span.icon.icon-erase




        a.btn.btn-primary-outline(href='#') View All
        a.btn.btn-success-outline(data-toggle='modal', data-target='#addActivityModal') Add

    .col-md-6.m-b-md
        .list-group
            h4.list-group-header
                | Goals
            for val in goal_result
                a.list-group-item(id='user_table_data')= val.a_name
                    - var goal_name = val.name;
                    - var goalToDelete = val.id;
                    #editDeleteContainer.pull-right
                        #g_name #{goal_name}
                            button.btn.btn-primary-outline(class='editDeleteButtons', data-toggle='modal', data-target='#addActivityModal')
                                span.icon.icon-pencil
                            form(action='/goals/delete' method='get', id='deleteForm')
                                for val in user_info_result
                                    - var data = val.id;
                                    input(type='hidden', name='userId', value=data)
                                input(type='hidden', name='goalToDelete', value=goalToDelete)
                                button.btn.btn-primary-outline(class='editDeleteButtons' type='submit')
                                    span.icon.icon-erase


        a.btn.btn-primary-outline(href='#') View All
        a.btn.btn-success-outline(data-toggle='modal', data-target='#addGoalModal') Add

// Modal
#addActivityModal.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal') x
                h4.modal-title Your activity details:

            form(action='/activityLog/insert' method='get', id='activityForm')
                .modal-body
                    .container(id='addActivityForm')
                        h4(id='addActivityHelpMessage') Please only select one activity
                            .form-group
                                for val in user_info_result
                                    - var data = val.id;
                                    input(type='hidden', name='userId', value=data)

                            .form-group
                                select.custom-select(class='addFormItem', name='activityId')
                                    option(value='', disabled='', selected='') Cardio
                                    for val in cardio_list
                                        - var name = val.name;
                                        option(value=val.id) #{name}

                            .form-group
                                select.custom-select(class='addFormItem', name='activityId')
                                    option(value='', disabled='', selected='') Weights
                                    for val in weights_list
                                        - var name = val.name;
                                        option(value=val.id) #{name}

                            .form-group
                                .input-group(class='addFormItem')
                                    input.form-control(type='text', name='dateDone', id='dateDone', value='09/01/2017', data-provide='datepicker', style='width: 200px;')

                            .form-group
                                textarea.form-control(name='activityDetails', class='addFormItem', type='text', id='activityDetails', placeholder='Any important details you want to save?')

                .modal-footer
                    button.btn.btn-default(type='submit') Submit
                    button.btn.btn-default(type='button', data-dismiss='modal') Cancel


